@page
@model LoginModel

@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Авторизация</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<link href="~/css/home.css" rel="stylesheet" />
<style>
    body {
        background: url() no-repeat center center fixed;
    }
</style>
<div id="container">
    <section>
        <h1>Авторизация</h1>

        <form id="account" method="post">
            <input asp-for="Input.Email" class="form-control" placeholder="Имя пользователя" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <input asp-for="Input.Password" class="form-control" placeholder="Пароль" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="form-group">
                <button type="submit" class="button" style="vertical-align:middle"><span>Войти </span></button>
            </div>
        </form>
    </section>
</div>
<script src="~/js/home.js"></script>
<script src='http://cdnjs.cloudflare.com/ajax/libs/gsap/1.16.1/TweenMax.min.js'></script>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
