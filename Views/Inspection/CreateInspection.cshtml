@model Inspection
@{
    ViewData["Title"] = "Добавление технического осмотра";
}
<div class="bg-primary m-1 p-1 text-center text-white">
    <h4>Добавление технического осмотра</h4>
</div>

<form asp-action="CreateInspection" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="AutoId">Гос. номер</label>
        <select asp-for="AutoId" class="form-control" asp-items="ViewBag.AutoId"></select>
        <span asp-validation-for="AutoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InspectionDate">Дата прохождения</label>
        <input asp-for="InspectionDate" type="month" class="form-control" />
        <span asp-validation-for="InspectionDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InspectionMonthNext">Дата продления</label>
        <input asp-for="InspectionMonthNext" type="month" class="form-control" />
        <span asp-validation-for="InspectionMonthNext" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>

</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
