@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Администрирование";
}

<link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<div class="bg-primary m-1 p-1 text-white text-center">
    <h4>Аккаунты пользователей</h4>
</div>
<div class="table table-sm table-bordered"></div>

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Имя пользователя</th>
        <th>Email</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" class="text-center">Нет аккаунтов пользователей</td>
        </tr>
    }
    else
    {
        foreach (ApplicationUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-outline-info" asp-action="EditUser" asp-route-id="@user.Id">
                            <span class="fa fa-pencil"></span>
                        </a>
                        <button type="submit" class="btn btn-outline-danger">
                            <span class="fa fa-close"></span>
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a class="btn btn-outline-info " asp-action="CreateUser">
    <span class="fa fa-plus-circle">Добавить пользователя</span>
</a>
<a class="btn btn-primary" asp-action="Start">Назад</a>
