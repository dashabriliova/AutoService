@model CreateAutoModel

<div class="bg-primary m-1 p-1 text-white text-center">
    <h4>Добавление автомобиля</h4>
</div>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="CreateAuto" method="post">
    <div class="form-group">
        <label asp-for="AutoName">Наименование</label>
        <input asp-for="AutoName" class="form-control" />
        <span asp-validation-for="AutoName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AutoNumber">Гос. номер</label>
        <input asp-for="AutoNumber" class="form-control" />
        <span asp-validation-for="AutoNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AutoVIN">VIN код</label>
        <input asp-for="AutoVIN" class="form-control" />
        <span asp-validation-for="AutoVIN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AutoYear">Дата выпуска</label>
        <input asp-for="AutoYear" type="month" class="form-control" />
        <span asp-validation-for="AutoYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AutoImage">Фото</label>
        <input asp-for="AutoImage" type="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
