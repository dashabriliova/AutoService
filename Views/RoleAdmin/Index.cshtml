@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Роли";
}

<link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<div class="bg-primary m-1 p-1 text-white text-center">
    <h4>Роли пользователей</h4>
</div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<a class="btn btn-outline-info" asp-action="CreateRole">
    <span class="fa fa-plus-circle">Добавить роль</span>
</a>
<div class="table table-sm table-bordered"></div>

<table class=" table table-sm table-bordered table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Users</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <th colspan="4" class="text-center">Роли отсутствуют</th>
        </tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-outline-info" asp-action="EditRole" asp-route-id="@role.Id">
                            <span class="fa fa-pencil"></span>
                        </a>
                        <button type="submit" class="btn btn-outline-danger">
                            <span class="fa fa-close"></span>
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-controller="Admin" asp-action="Start">Назад</a>
